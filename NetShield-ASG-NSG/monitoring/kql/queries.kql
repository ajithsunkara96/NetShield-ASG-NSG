// CPU usage over time for a specific VM
Perf
| where ObjectName == "Processor" and CounterName == "% Processor Time" and InstanceName == "_Total"
| summarize avg(CounterValue) by bin(TimeGenerated, 5m), Computer
| order by TimeGenerated desc

// Free space by logical disk
Perf
| where ObjectName == "LogicalDisk" and CounterName in ("Free Megabytes","% Free Space")
| project TimeGenerated, Computer, InstanceName, CounterName, CounterValue
